{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2018"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./types"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/__fixtures__", "**/__tests__"],
  "compileOnSave": false,
  "buildOnSave": false
}
